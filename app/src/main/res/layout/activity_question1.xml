<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_question1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#49C2CF"
    tools:context="com.example.sergio.quizmetestgui.Question1">


    <ImageView
        android:src="@drawable/capture1"
        android:id="@+id/question"
        android:layout_width="340dp"
        android:layout_height="130dp"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@drawable/roundcorner"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/xp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/problem"
        android:text="How many times does this for loop iterate?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/question"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textAllCaps="true"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/xp"
        android:text="XP:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/score1"
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/xp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:background="@drawable/roundcorner"/>

    <Button
        android:id="@+id/button1"
        android:text="8"
        android:textColor="@android:color/white"
        android:background="@drawable/roundcorner"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/problem"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/button2"
        android:text="9"
        android:textColor="@android:color/white"
        android:background="@drawable/roundcorner"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/button3"
        android:text="10"
        android:textColor="@android:color/white"
        android:background="@drawable/roundcorner"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button2"
        android:layout_centerHorizontal="true"
        android:onClick="first"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/button4"
        android:text="0"
        android:textColor="@android:color/white"
        android:background="@drawable/roundcorner"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/mytime"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/score1"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
