<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_dash_board"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sergio.quizmetestgui.UserDashBoard"
    android:background="@color/colorPrimary">

    <ImageView
        android:layout_width="0dp"
        app:srcCompat="@color/colorPrimaryDark"
        android:id="@+id/imageView3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height="70dp"
        android:elevation="10dp" />

    <ImageView
        app:srcCompat="@drawable/circle"
        android:id="@+id/imageView4"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        android:layout_width="130dp"
        android:elevation="10dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="@+id/imageView3"
        android:layout_marginStart="42dp"
        android:layout_height="130dp" />

    <ImageView
        android:id="@+id/imageView5"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintRight_toRightOf="@+id/imageView4"
        app:layout_constraintLeft_toLeftOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        android:background="@drawable/com_facebook_profile_picture_blank_square"
        android:scaleType="center"
        android:elevation="10dp"
        android:layout_width="83dp"
        android:layout_height="83dp" />

    <TextView
        android:text="TEST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView4"
        app:layout_constraintRight_toRightOf="@+id/imageView3"
        android:layout_marginEnd="16dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@android:color/background_light"
        android:elevation="10dp" />

    <TextView
        android:text="Courses Enroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        app:layout_constraintRight_toRightOf="@+id/imageView4"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintLeft_toLeftOf="@+id/imageView4"
        android:textSize="24sp" />

    <Button
        android:text="Intro to Programming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        app:layout_constraintRight_toRightOf="@+id/textView"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        android:background="@drawable/rounded_sides"
        android:layout_marginStart="32dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <Button
        android:text="Challenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/play"
        android:background="@drawable/rounded_sides"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button3"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button3"
        android:onClick="play" />

    <Button
        android:text="Live Chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_sides"
        android:onClick="chat" />

</android.support.constraint.ConstraintLayout>
